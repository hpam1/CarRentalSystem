charset=ISO-8859-1

input[type=text] {
	border:2px solid #a1baf3;
	font-size:16px;
	font-family:raleway;
	background-color: #fff;
}

input[type=submit], input[type=button] {
	background-color:#a1baf3;
	color:#fff;
	border:2px solid #ccc;
	font-size:20px;
	cursor:pointer;
	border-radius:5px;
}

.erorrMsg {
	width: 75%;
	margin: 15px auto;
	text-align: center;
	font-weight: bold;
	color: #f00;
	font-size: 20px;
}

html, body {
	margin:0;
	padding:0;
	height:100%;
}

label {
	font-family: "raleway", serif;
	font-size: 16px;
}

#content {
	padding:20px;
	padding-bottom:20px;   /* Height of the footer element */
}

#header {
	padding:10px;	
}


#footer {
	width:100%;
	height:20px;  /* Height of the footer */
	position:absolute;
	bottom:0;
	left:0
}

#clear{
background-color:#a1baf3;
	color:#fff;
	border:2px solid #ccc;
	font-size:20px;
	cursor:pointer;
	border-radius:5px;
}

#wrapper {
	min-height:100%;
	position:relative;
}

#table{
    position:absolute;
    top:0px;
    left:300px
}

#filters{ 
     position:relative;      
}
